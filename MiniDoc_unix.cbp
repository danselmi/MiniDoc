			<Target title="default">
				<Option output="MiniDoc" prefix_auto="0" extension_auto="1" />
				<Option type="3" />
				<Option compiler="gcc" />
				<Option parameters="--debug-log --multiple-instance -na -ns -nd" />
				<Option host_application="codeblocks" />
				<Option run_host_application_in_terminal="0" />
				<Compiler>
					<Add option="-ansi" />
					<Add option="-g" />
					<Add option="`pkg-config --cflags codeblocks`" />
					<Add option="`wx-config --cflags`" />
					<Add option="-fPIC" />
				</Compiler>
				<Linker>
					<Add option="`pkg-config --libs codeblocks`" />
					<Add option="`wx-config --libs`" />
				</Linker>
				<ExtraCommands>
					<Add after="zip -j9 MiniDoc.zip manifest.xml" />
					<Add after="zip -j9 MiniDoc.cbplugin MiniDoc.so MiniDoc.zip" />
				</ExtraCommands>
			</Target>
			<Target title="plugin">
				<Option output="../../../devel/share/codeblocks/plugins/MiniDoc" prefix_auto="1" extension_auto="1" />
