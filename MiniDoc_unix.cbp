					<Add option="`pkg-config --cflags codeblocks`" />
					<Add option="`wx-config --cflags`" />
					<Add option="-ansi" />
					<Add option="-fPIC" />
					<Add option="-g" />
				</Compiler>
				<Linker>
					<Add option="`pkg-config --libs codeblocks`" />
					<Add option="`wx-config --libs`" />
				</Linker>
				<ExtraCommands>
					<Add after="zip -jq9 ../../../devel/share/codeblocks/MiniDoc.zip manifest.xml" />
				</ExtraCommands>
			</Target>
		</Build>
		<VirtualTargets>
			<Add alias="All" targets="plugin;" />
		</VirtualTargets>
		<Unit filename="MiniDoc.cpp" />
		<Unit filename="MiniDoc.h" />
		<Unit filename="MiniDocPanel.cpp" />
		<Unit filename="MiniDocPanel.h" />
		<Unit filename="MiniStyledTextCtrl.cpp" />
